{
  "name": "jakub-the-developer/markdown-blog",
  "description": "Simple blog/website application that converts markdown files to html.",
  "license": "MIT",
  "autoload": {
    "psr-4": {"MarkdownBlog\\": "src"}
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit tests --bootstrap vendor/autoload.php --coverage-html coverage",
    "phpstan": "vendor/bin/phpstan analyse src tests --level=9"
  },
  "require": {
    "php": ">=8.1",
    "symfony/console": "^5.4",
    "symfony/yaml": "^6.0",
    "erusev/parsedown": "^1.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.3"
  }
}
